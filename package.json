{
  "name": "@arkejs/ui",
  "version": "0.26.0",
  "description": "Arke UI components library based on tailwindcss",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "require": "./dist/plugin/index.js",
      "import": "./dist/plugin/index.mjs",
      "types": "./dist/plugin/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm utilities && pnpm components && tsup",
    "clean": "rm -rf dist",
    "lint": "eslint",
    "test": "jest --coverage --silent",
    "components": "postcss --config src/components src/components/**/*.css --base src --dir dist && cat dist/components/**/*.css > dist/components/base.css && prejss-cli dist/components/base.css --format commonjs",
    "utilities": "postcss --config src/utilities src/utilities/*.css --base src --dir dist && cat dist/utilities/*.css > dist/utilities/base.css && prejss-cli dist/utilities/base.css --format commonjs",
    "semantic-release": "semantic-release",
    "storybook": "concurrently \"pnpm:watch:*\"",
    "build-storybook": "concurrently \"pnpm:build:*\"",
    "build:storybook": "build-storybook",
    "build:tailwind": "npx tailwindcss -c .storybook/tailwind.config.js -i .storybook/tailwind.css -o ./static/tailwind.css",
    "watch:tailwind": "npx tailwindcss -c .storybook/tailwind.config.js -i .storybook/tailwind.css -o ./static/tailwind.css --watch",
    "watch:storybook": "start-storybook -p 6006"
  },
  "keywords": [
    "arke",
    "ui"
  ],
  "author": "Arkemis S.r.l.",
  "license": "Apache-2.0",
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-styling": "^0.3.2",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/client-api": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/color": "^3.0.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.27",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.5.0",
    "babel-loader": "^8.3.0",
    "chromatic": "^6.15.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "prejss-cli": "^0.3.3",
    "prettier": "^2.8.3",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.1.2",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.8",
    "@monaco-editor/react": "^4.4.6",
    "@popperjs/core": "^2.11.6",
    "color": "^4.2.3",
    "react-day-picker": "^8.7.1",
    "react-popper": "^2.3.0",
    "tailwind-merge": "^1.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arkemishub/ui.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
